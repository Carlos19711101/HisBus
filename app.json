{
  "expo": {
    "name": "HisMoto",
    "slug": "historia-motocicleta",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "backgroundColor": "#ffffff",
    "splash": {
      "image": "./assets/icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "plugins": [
      [
        "expo-camera",
        {
          "cameraPermission": "Allow $(PRODUCT_NAME) to access your camera",
          "microphonePermission": "Allow $(PRODUCT_NAME) to access your microphone",
          "recordAudioAndroid": true
        }
      ],
      [
        "expo-splash-screen",
        {
          "backgroundColor": "#ffffff",
          "splashScreenImage": "./assets/icon.png"
        }
      ]
    ],
    "ios": {
      "supportsTablet": true,
      "backgroundColor": "#ffffff",
      "infoPlist": {
        "NSCameraUsageDescription": "Esta aplicaci칩n necesita acceso a la c치mara para tomar fotos.",
        "NSMicrophoneUsageDescription": "Esta aplicaci칩n necesita acceso al micr칩fono para grabar audio."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "package": "com.anonymous.MySimpleApp",
      "backgroundColor": "#ffffff",
      "permissions": [
        "CAMERA",
        "RECORD_AUDIO"
      ],
      "softwareKeyboardLayoutMode": "pan",
      "edgeToEdgeEnabled": true,
      "statusBar": {
          "backgroundColor": "transparent",
          "translucent": true
      }
    },
    "web": {
      "favicon": "./assets/favicon.png"
    }
  }
}