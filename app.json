{
  "expo": {
    "name": "Historia motocicleta",
    "slug": "historia-motocicleta",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "backgroundColor": "#0f8403",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#0f8403"
    },
    "plugins": [
      [
        "expo-camera",
        {
          "cameraPermission": "Allow $(PRODUCT_NAME) to access your camera",
          "microphonePermission": "Allow $(PRODUCT_NAME) to access your microphone",
          "recordAudioAndroid": true
        }
      ],
      [
        "expo-splash-screen",
        {
          "backgroundColor": "#0f8403",
          "splashScreenImage": "./assets/splash.png"
        }
      ]
    ],
    "ios": {
      "supportsTablet": true,
      "backgroundColor": "#0f8403",
      "infoPlist": {
        "NSCameraUsageDescription": "Esta aplicaci칩n necesita acceso a la c치mara para tomar fotos.",
        "NSMicrophoneUsageDescription": "Esta aplicaci칩n necesita acceso al micr칩fono para grabar audio."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#0f8403"
      },
      "package": "com.anonymous.MySimpleApp",
      "backgroundColor": "#0f8403",
      "permissions": [
        "CAMERA",
        "RECORD_AUDIO"
      ],
      "softwareKeyboardLayoutMode": "pan",
      "edgeToEdgeEnabled": true,
      "statusBar": {
        "backgroundColor": "#0f8403",
        "translucent": false
      }
    },
    "web": {
      "favicon": "./assets/favicon.png"
    }
  }
}